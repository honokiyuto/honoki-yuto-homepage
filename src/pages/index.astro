---
import '@/styles/global.css';
import Header from '@/components/layout/Header/index.astro';
import Main from '@/components/layout/Main/index.astro';
import Footer from '@/components/layout/Footer/index.astro';
const title = 'Cafe\'s Entrance';
const description = 'honokiyutoのホームページです。';
const basePath = import.meta.env.BASE_URL;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href={`${basePath}/favicon.ico`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={title} />
    <meta property="og:image" content={`${basePath}/ogp.png`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${basePath}/ogp.png`} />
    <title>{title}</title>
  </head>
  <body class:list={['h-dvh', 'w-dvw', 'overflow-hidden']}>
    <Header />
    <Main />
    <Footer />  
  </body>
</html>
